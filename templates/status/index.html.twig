{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <main role="main" class="col-md-12 order-md-2 pt-3 px-4">
                <h3 class="text-center rounded-pill bg-info text-white">Status Database </h3>
                <table class="table table-bordered table-md table-striped" id="table" style="font-size: 13px">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Created At</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for status in statuses %}
                            <tr>
                                <td>{{ status.id}}</td>
                                <td>
                                    {% if status.name == 'Available' %}
                                        <div class="status-circle bg-success"></div>
                                        <span class="status-text">{{ status.name}}</span>
                                    {% elseif status.name == 'Maintenance' %}
                                        <div class="status-circle bg-warning"></div>
                                        <span class="status-text">{{ status.name}}</span>
                                    {% elseif status.name == 'Update' %}
                                        <div class="status-circle bg-warning"></div>
                                        <span class="status-text">{{ status.name}}</span>
                                    {% elseif status.name == 'Down' %}
                                        <div class="status-circle bg-danger"></div>
                                        <span class="status-text">{{ status.name}}</span>
                                    {% endif %}
                                </td>

                                <td>{{ status.createdAt|date('Y-m-d H:i:s') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}
