{# templates/contact/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h3 class="text-center rounded-pill bg-info text-white">Contact Us</h3>
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">Feel free to get in touch with us. Use the form below to send us a message.</p>
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Your Name'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Your Email'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Your Message', 'rows': '5'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.attachment, {'attr': {'class': 'form-control-file'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
