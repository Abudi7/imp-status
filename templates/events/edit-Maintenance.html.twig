{% extends 'base.html.twig' %}

{% block title %}Edit Maintenance Event{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="bg-info text-center text-white rounded-pill">Edit Maintenance Event</h2>
        <form method="post" action="{{ path('app_events_edit_maintenance', {'eventId': event.id}) }}" class="mt-4">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="{{ path('app_system_display', {'id': system.id}) }}" class="btn btn-secondary">Cancel</a>
            </div>
            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
