{% extends 'base.html.twig' %}

{% block body %}

<head>
    <!-- ... Other head elements ... -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white">
                    <strong>System Details</strong> - {{ displays.name }}
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> {{ displays.id }}</p>
                    <p><strong>Name:</strong> {{ displays.name }}</p>
                    <p><strong>Created:</strong> {{ displays.createdAt|date('Y-m-d H:i') }}</p>
                    <p><strong>Generated by:</strong> {{ displays.creator.username }}</p>
                    <p><strong>Info:</strong> {{ displays.info }}</p>
                    <!-- Display the dynamic system status with circle and background color -->
                    <p><strong>Status:</strong> <span class="system-status" data-system-id="{{ displays.id }}"></span></p>
                    <!-- Add more fields as needed -->
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{% if is_granted('ROLE_ADMIN') %}{{ path('app_system')}}{% else %}{{ path('app_allSubscription')}}{% endif %}"
                        class="btn btn-secondary">Back</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="dropdown">
                        <a href="#" class="btn btn-secondary dropdown-toggle" role="button" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            Events
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item"
                                href="{{ path('app_events_system', {'systemId': displays.id}) }}">Events List</a>
                            <a class="dropdown-item"
                                href="{{ path('app_events_new_maintenance', {'id': displays.id}) }}">Maintenance</a>
                            <a class="dropdown-item"
                                href="{{ path('app_events_new_incident', {'id': displays.id}) }}">Incident</a>
                        </div>
                    </div>
                    {% endif %}
                    <a href="{{ path('app_system_delete', {'id': displays.id}) }}" class="btn btn-danger"><i
                            class="fa fa-trash"></i></a>
                </div>
            </div>

            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script>
                // Fetch and display dynamic system status using JavaScript
                document.addEventListener('DOMContentLoaded', function () {
                    const systemStatusSpans = document.querySelectorAll('.system-status');

                    systemStatusSpans.forEach(span => {
                        const systemId = span.dataset.systemId;
                        fetch(`http://localhost:8080/public/events/get-system-status/${systemId}`)
                            .then(response => response.json())
                            .then(data => {
                                const status = data.status;
                                let bgColorClass = '';

                                if (status === 'available') {
                                    bgColorClass = 'bg-success';
                                } else if (status === 'maintenance') {
                                    bgColorClass = 'bg-warning';
                                } else if (status === 'incident') {
                                    bgColorClass = 'bg-danger';
                                }

                                // Construct and set the HTML for dynamic status display
                                const statusHtml = `<div class="status-circle ${bgColorClass}"></div><div style="display: inline">${status}</div>`;
                                span.innerHTML = statusHtml;
                            })
                            .catch(error => {
                                console.error('Error fetching system status:', error);
                            });
                    });
                });
            </script>

        </div>
    </div>
</div>

{% endblock %}
