{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                   <strong> System Details </strong>  - {{ displays.name }}
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> {{ displays.id }}</p>
                    <p><strong>Name:</strong> {{ displays.name }}</p>
                    <p><strong>Created:</strong> {{ displays.createdAt|date('Y-m-d H:i') }}</p>
                    <p><strong>Generated by:</strong> {{ displays.creator.username }}</p>
                    <p><strong>Info: </strong> {{ displays.info }}</p>
                    
                    <!-- Add more fields as needed -->
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_system')}}" class="btn btn-secondary">Back</a>
                    <a href="{{ path('app_events_system', {'systemId': displays.id}) }}" class="btn btn-secondary">Events list</a>
                    <a href="{{ path('app_events_new_maintenance', {'id': displays.id}) }}" class="btn btn-warning">Maintenance</a>
                    <a href="{{ path('app_events_new_incident', {'id': displays.id}) }}" class="btn btn-danger">Incident</a>
                    <a href="{{ path('app_system_delete', {'id': displays.id}) }}" class="btn btn-danger float-right"><i class="fa fa-trash"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
