{% extends 'base.html.twig' %}

{% block body %}
<head>
    <!-- ... Other head elements ... -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                <div class="card-header bg-primary text-white">
                    <strong>System Details</strong> - {{ displays.name }}
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> {{ displays.id }}</p>
                    <p><strong>Name:</strong> {{ displays.name }}</p>
                    <p><strong>Created:</strong> {{ displays.createdAt|date('Y-m-d H:i') }}</p>
                    <p><strong>Generated by:</strong> {{ displays.creator.username }}</p>
                    <p><strong>Info:</strong> {{ displays.info }}</p>
                    
                    <!-- Add more fields as needed -->
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('app_system')}}" class="btn btn-secondary">Back</a>
                    <div class="dropdown">
                        <a href="#" class="btn btn-secondary dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Events
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('app_events_system', {'systemId': displays.id}) }}">Events List</a>
                            <a class="dropdown-item" href="{{ path('app_events_new_maintenance', {'id': displays.id}) }}">Maintenance</a>
                            <a class="dropdown-item" href="{{ path('app_events_new_incident', {'id': displays.id}) }}">Incident</a>
                        </div>
                    </div>
                    <a href="{{ path('app_system_delete', {'id': displays.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
