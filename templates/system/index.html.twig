{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
   <div class="row">
      <main role="main" class="col-md-12 order-md-1 pt-1 px-2">
         <h1 class="text-center mt-5 mb-3">Systems</h1>
         <div class="table-responsive">
         <table class="table border table-md table-striped" id="table" style="font-size: 13px">
         <thead class="bg-primary text-white">
            <tr>
               <th scope="col">ID</th>
               <th scope="col">Name</th>
               <th scope="col">Created at</th>
               <th scope="col">info</th>
               <th scope="col">Generated by</th>
               <th scope="col"> Active | Deactive </th>
            </tr>
            </thead>
            <tbody>
             {% for system in systems %}
                {% if system.active == 0 %}
                    <tr>
                        <td>{{ system.id }}</td>
                        <td><a href="{{ path('app_system_display', {'id': system.id}) }}"class="btn btn-sm btn-link disabled">{{ system.name }}</a></td>
                        <td><p class=" disabled">{{ system.createdAt|date('Y-m-d H:i:s') }}</p></td>
                        <td><p class=" disabled">{{ system.info }}</td>
                        <td class=" disabled">{{ system.creator.username }}</td>
                        <td>
                            <a href="{{ path('app_system', {'system_id': system.id, 'active': system.active ? 0 : 1 }) }}"
                            class="btn btn-sm btn-link btn-outline-danger text-danger">
                                {{ system.active ? 'Deactivate' : 'Activate' }}
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td>{{ system.id }}</td>
                        <td><a href="{{ path('app_system_display', {'id': system.id}) }}">{{ system.name }}</a></td>
                        <td>{{ system.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ system.info }}</td>
                        <td class=" disabled">{{ system.creator.username }}</td>
                        <td>
                            <a href="{{ path('app_system', {'system_id': system.id, 'active': system.active ? 0 : 1 }) }}"
                            class="btn btn-sm btn-link btn-outline-primary">
                                {{ system.active ? 'Deactivate' : 'Activate' }}
                            </a>
                        </td>
                    </tr>
                {% endif %}    
             {% endfor %}
            </tbody>
         </table>
      </main>
   </div>
</div>
{% endblock %}