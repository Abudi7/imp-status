{% extends 'base.html.twig' %}

{% block title %}Unsubscribe from System
{% endblock %}

{% block body %}
	<div class="container mt-3">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h2 class="text-center mb-4">Unsubscribe from System</h2>
				{% if message is defined %}
					<div class="alert alert-success">{{ message }}</div>
				{% endif %}
				<form method="post">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">System</th>
								<th scope="col">Status</th>
								<th scope="col">Last Update</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>{{ statuses.system }}</td>
								<td>{{ statuses.status }}</td>
								<td>{{ statuses.updatedAt|date('Y-m-d H:i:s') }}</td>
							</tr>
						</tbody>
					</table>
					<div class="form-group">
						<label for="system">System</label>
						<input type="text" class="form-control" id="system" name="system" value="{{ statuses.system }}" readonly>
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-danger">Unsubscribe</button>
						<a href="{{ path('app_subscription') }}" class="btn btn-secondary">Go to Your Subscription</a>
						<a href="{{ path('app_home') }}" class="btn btn-secondary">Back to Home</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
