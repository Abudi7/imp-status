{% extends 'base.html.twig' %}

{% block title %}Template Details{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h3 class="text-center rounded-pill bg-info text-white">Template Details</h3>
            <div class="card">
                <div class="card-header">
                   <h4>{{ template.title }}</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ template.subject }}</h5>
                    <hr>
                    <p class="card-text">{{ template.template|nl2br }}</p>
                </div>
               <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_template') }}" class="btn btn-secondary">Back to Templates</a>
                    <a href="{{ path('app_template_edit', {'id': template.id}) }}" class="btn btn-primary">Edit Template</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

