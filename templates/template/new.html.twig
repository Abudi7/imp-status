{# templates/email_template/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h3 class="text-center rounded-pill bg-info text-white">Create a New Email Template</h3>
     
        {{ form_start(form) }}
            {{ form_row(form.type,{'attr': {'class': 'form-control mb-3', 'placeholder': 'Title'}}) }}
            <small class="form-text text-muted mb-4">Please choose a type from the dropdown.</small> <!-- Notice added -->
            {{ form_row(form.title,{'attr': {'class': 'form-control mb-3', 'placeholder': 'Title'}}) }}
            {{ form_row(form.subject,{'attr': {'class': 'form-control mb-3', 'placeholder': 'Subject'}}) }}
            {{ form_row(form.template,{'attr': {'class': 'form-control mb-3', 'rows': 6, 'placeholder': 'Body'}}) }}
            {{ form_widget(form.save) }}
        {{ form_end(form) }}
  
         {# <form method="post" action="{{ path('app_template_new') }}" class="needs-validation" novalidate>
