            {{ form_row(form.template, {'attr': {'class': 'form-control mb-3', 'rows': 6, 'placeholder': 'Body'}}) }}
            {{ form_widget(form.save) }}
        </form>  #}
        
       <div class="mt-2 alert alert-info">
            <p>Use the following variables in your email template:</p>
            <ul>
                <li>{system_name} - System name</li>
                <li>{start_time} - Start time</li>
                <li>{end_time} - Expected end time (only applicable for maintenance)</li>
                <li>{responsible_person} - Responsible person</li>
            </ul>
        </div>
    </div>    
{% endblock %}
