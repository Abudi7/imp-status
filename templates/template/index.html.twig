{% extends 'base.html.twig' %}

{% block title %}Maintenance & Incidents{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="text-center rounded-pill bg-info text-white">Maintenance & Incidents</h3>
            <div class="alert alert-info">
                <p><strong>Admin Guide:</strong> This page displays a list of maintenance and incident templates.</p>
                <ul>
                    <li><span class="badge badge-warning">Maintenance</span> - Use this type for maintenance-related templates.</li>
                    <li><span class="badge badge-danger">Incident</span> - Use this type for incident-related templates.</li>
                    {# <li><span class="badge badge-primary">Other</span> - Use this type for other types of templates.</li> #}
                </ul>
                <p>You can click on a template's title to view its details. If you have admin privileges, you can add new templates using the "Add Template" button.</p>
            </div>
            <table class="table table-bordered table-md table-striped" id="table" style="font-size: 13px">
                    <thead class="bg-primary text-white">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Title</th>
                        <th>Subject</th>
                        <th>Template</th>
                    </tr>
                </thead>
                <tbody>
                    {% for template in templates %}
                    <tr>
                        <td>{{ template.id }}</td>
                        <td>
                            {% if template.type == 'maintenance' %}
                            <span class="badge badge-warning">{{ template.type }}</span>
                            {% elseif template.type == 'incident' %}
                            <span class="badge badge-danger">{{ template.type }}</span>
                            {% else %}
                            <span class="badge badge-primary">{{ template.type }}</span>
                            {% endif %}
                        </td>
                        <td><a href="{{ path('app_template_show', {'id': template.id}) }}">{{ template.title }}</a></td>
                        <td>{{ template.subject }}</td>
                        <td>{{ template.template }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="mb-3">
                <a href="{{ path('app_template_new') }}" class="btn btn-primary">Add Template</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}