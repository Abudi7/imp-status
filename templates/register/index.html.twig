{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.username) }}
                {{ form_row(form.roles) }}
                {{ form_row(form.password.first) }}
                {{ form_row(form.password.second) }}
                {{ form_row(form.register) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
